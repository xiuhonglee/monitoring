extends ../layout
block child-page
	div.row
		div.col-lg-12
			h3.page-header Buttons
	


	div.row
		div.col-lg-6
			h4 Buttons types
			p
				button(type="button").btn.btn-default Default
				button(type="button").btn.btn-primary primary
				button(type="button").btn.btn-success success
				button(type="button").btn.btn-Info Info
				button(type="button").btn.btn-Warning Warning
				button(type="button").btn.btn-Danger Danger
			h4 Disable Buttons
			p
				button(type="button").btn.btn-default.disabled Default
				button(type="button").btn.btn-primary.disabled primary
				button(type="button").btn.btn-success.disabled success
				button(type="button").btn.btn-Info.disabled Info
				button(type="button").btn.btn-Warning.disabled Warning
				button(type="button").btn.btn-Danger.disabled Danger
			h4 Button Sizes
			p
				button(type="button").btn.btn-primary.btn-lg Large Button
				button(type="button").btn.btn-primary Default button
				button(type="button").btn.btn-primary.btn-sm Small button
				button(type="button").btn.btn-primary.btn-xs Mini button



